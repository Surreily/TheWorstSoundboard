<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="Surreily.TheWorstSoundboard.Views.SoundboardEdit.SoundboardEditPage"
    Title="Soundboard">

    <Grid
        Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <toolkit:MediaElement
            x:Name="MediaElement"
            IsVisible="false" />

        <ScrollView
            Grid.Row="0">
            <FlexLayout
                x:Name="SoundModelsFlexLayout"
                JustifyContent="Center"
                AlignContent="Start"
                AlignItems="Start"
                Wrap="Wrap">
            </FlexLayout>
        </ScrollView>

        <Button
            Grid.Row="1"
            Text="Add"
            Clicked="AddButton_Clicked" />
    </Grid>
</ContentPage>