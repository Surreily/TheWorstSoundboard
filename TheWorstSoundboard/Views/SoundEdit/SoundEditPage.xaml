<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Surreily.TheWorstSoundboard.Views.SoundEdit.SoundEditPage"
    Title="Sound">
    <VerticalStackLayout>
        <Entry
            IsEnabled="False"
            Text="{Binding ViewModel.SelectedSoundFileName}" />
        <Button
            Text="Select"
            Clicked="SelectSoundButton_Clicked" />

        <Entry
            IsEnabled="False"
            Text="{Binding ViewModel.SelectedImageFileName}" />
        <Button
            Text="Select"
            Clicked="SelectImageButton_Clicked" />

        <Button
            Text="Save"
            Clicked="SaveButton_Click" />
    </VerticalStackLayout>
</ContentPage>